  <!-- Ëã±ÈõÑÂå∫Âüü -->
  <view class="hero-section">
    <image class="hero-bg" src="/images/hero.jpg" mode="aspectFill"></image>
    <view class="hero-overlay"></view>
    <view class="hero-content">
      <view class="hero-text">
        <text class="hero-title">Best Escape Choice</text>
        <text class="hero-subtitle">Explore thousands of incredible places. Where every journey becomes an unforgettable memory.</text>
      </view>
      
      <!-- ÊêúÁ¥¢Ë°®Âçï -->
      <view class="search-form">
        <view class="search-form-tabs">
          <button 
            class="{{activeTab === 'flight' ? 'search-form-tab search-form-tab-active' : 'search-form-tab'}}" 
            bindtap="switchTab"
            data-tab="flight"
            plain
          >
            Flight
          </button>
          <button 
            class="{{activeTab === 'hotel' ? 'search-form-tab search-form-tab-active' : 'search-form-tab'}}" 
            bindtap="switchTab"
            data-tab="hotel"
            plain
          >
            Hotel
          </button>
        </view>
        
        <view class="search-form-fields">
          <view class="search-form-field">
            <text class="search-form-label">From</text>
            <input 
              class="search-form-input" 
              value="{{formData.from}}" 
              bindinput="bindFromInput"
              placeholder="City or Airport"
            ></input>
            <text class="search-form-input-hint">CGK, South Jakarta, Indonesia</text>
          </view>
          
          <view class="search-form-field">
            <text class="search-form-label">To</text>
            <input 
              class="search-form-input" 
              value="{{formData.to}}" 
              bindinput="bindToInput"
              placeholder="City or Airport"
            ></input>
            <text class="search-form-input-hint">Noi Bai International Airport</text>
          </view>
          
          <view class="search-form-field">
            <text class="search-form-label">Date</text>
            <input 
              class="search-form-input" 
              value="{{formData.date}}" 
              bindinput="bindDateInput"
              placeholder="Select Date"
            ></input>
          </view>
          
          <view class="search-form-field">
            <text class="search-form-label">Passengers</text>
            <input 
              class="search-form-input" 
              value="{{formData.passengers}}" 
              bindinput="bindPassengersInput"
              placeholder="Number of Passengers"
            ></input>
          </view>
        </view>
        
        <button class="search-form-btn" type="primary" bindtap="search">
          <text>Search Flight</text>
          <text class="icon">‚Üí</text>
        </button>
      </view>
    </view>
