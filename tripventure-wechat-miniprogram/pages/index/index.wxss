/* pages/index/index.wxss */
/* 页面容器 */
.page-container {
  min-height: 100vh;
  background-color: #fff;
}

/* 导航栏 */
.navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 80rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  z-index: 999;
}

.navbar-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100%;
  padding: 0 32rpx;
}

.navbar-logo-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b00;
}

.navbar-actions {
  display: flex;
  align-items: center;
}

.navbar-action-btn {
  margin-right: 24rpx;
}

.navbar-signin-btn {
  background-color: #ff6b00;
  border-color: #ff6b00;
}

/* 英雄区域 */
.hero-section {
  position: relative;
  height: 100vh;
  margin-top: 80rpx;
}

.hero-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
}

.hero-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.3);
}

.hero-content {
  position: relative;
  z-index: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 0 32rpx;
}

.hero-text {
  text-align: center;
  margin-bottom: 80rpx;
}

.hero-title {
  font-size: 64rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 24rpx;
  display: block;
}

.hero-subtitle {
  font-size: 32rpx;
  color: #fff;
  line-height: 1.5;
  display: block;
}

/* 搜索表单 */
.search-form {
  background-color: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  padding: 32rpx;
  width: 100%;
  max-width: 960rpx;
}

.search-form-tabs {
  display: flex;
  border-bottom: 1rpx solid #e5e5e5;
  margin-bottom: 32rpx;
}

.search-form-tab {
  flex: 1;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  border-bottom: 2rpx solid transparent;
}

.search-form-tab-active {
  color: #ff6b00;
  border-bottom-color: #ff6b00;
}

.search-form-fields {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.search-form-field {
  display: flex;
  flex-direction: column;
}

.search-form-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.search-form-input {
  height: 80rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 24rpx;
}

.search-form-input-hint {
  font-size: 20rpx;
  color: #999;
  margin-top: 4rpx;
}

.search-form-btn {
  width: 100%;
  height: 88rpx;
  background-color: #ff6b00;
  border-color: #ff6b00;
  border-radius: 12rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-form-btn .icon {
  margin-left: 12rpx;
}

/* 服务卡片 */
.services-section {
  padding: 120rpx 32rpx;
  background-color: #f5f5f5;
}

.services-content {
  max-width: 1200rpx;
  margin: 0 auto;
}

.services-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 32rpx;
}

.service-card {
  width: calc(33.333% - 21.333rpx);
  background-color: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.service-card-orange .service-card-body {
  background-color: #fff3e0;
}

.service-card-orange .service-card-icon {
  background-color: #fff;
}

.service-card-img {
  width: 100%;
  height: 320rpx;
}

.service-card-body {
  padding: 32rpx;
}

.service-card-icon {
  width: 64rpx;
  height: 64rpx;
  background-color: #f5f5f5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.service-card-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.service-card-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  display: block;
}

/* Expand Your Network */
.network-section {
  padding: 120rpx 32rpx;
  background-color: #fff;
}

.network-content {
  max-width: 1200rpx;
  margin: 0 auto;
  display: flex;
  gap: 80rpx;
  align-items: center;
}

.network-left,
.network-right {
  flex: 1;
}

.network-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  display: block;
}

.network-subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 48rpx;
  line-height: 1.5;
  display: block;
}

.network-features {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.network-feature {
  display: flex;
  align-items: flex-start;
}

.network-feature-icon {
  width: 64rpx;
  height: 64rpx;
  background-color: #f5f5f5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  margin-top: 8rpx;
}

.network-feature-content {
  flex: 1;
}

.network-feature-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.network-feature-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
}

.network-right {
  position: relative;
  display: flex;
  justify-content: center;
}

.app-container {
  width: 480rpx;
  height: 640rpx;
  background: linear-gradient(135deg, #fff3e0 0%, #ffe0b2 100%);
  border-radius: 32rpx;
  padding: 32rpx;
  transform: rotate(-3deg);
  box-shadow: 0 16rpx 64rpx rgba(0, 0, 0, 0.1);
}

.app-image {
  width: 100%;
  height: 100%;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
}

.qrcode-container {
  position: absolute;
  bottom: 32rpx;
  right: 32rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.qrcode-title {
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.qrcode-placeholder {
  width: 160rpx;
  height: 160rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.qrcode-placeholder-text {
  font-size: 20rpx;
  color: #999;
}

/* 统计数据 */
.stats-section {
  padding: 120rpx 32rpx;
  background-color: #f5f5f5;
}

.stats-content {
  max-width: 1200rpx;
  margin: 0 auto;
}

.stats-grid {
  display: flex;
  gap: 48rpx;
}

.stats-item {
  flex: 1;
}

.stats-item {
  text-align: center;
}

.stats-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.stats-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  display: block;
}

/* 页脚 */
.footer {
  background-color: #333;
  padding: 80rpx 32rpx 48rpx;
}

.footer-content {
  max-width: 1200rpx;
  margin: 0 auto;
}

.footer-grid {
  display: flex;
  gap: 48rpx;
  margin-bottom: 64rpx;
}

.footer-column {
  flex: 1;
}

.footer-column-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 24rpx;
  display: block;
}

.footer-column-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
  display: block;
}

.footer-links {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.footer-link {
  font-size: 24rpx;
  color: #999;
  text-decoration: none;
}

.footer-link:active {
  color: #ff6b00;
}

.footer-contact {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.footer-contact-item {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.footer-social {
  display: flex;
  gap: 24rpx;
}

.footer-social-icon {
  width: 56rpx;
  height: 56rpx;
  background-color: #444;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.footer-bottom {
  border-top: 1rpx solid #444;
  padding-top: 32rpx;
  text-align: center;
}

.footer-bottom-text {
  font-size: 20rpx;
  color: #999;
  display: block;
}


